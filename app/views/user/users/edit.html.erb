<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>ユーザー詳細変更</h2>
      <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <%= f.label :handle,  "ニックネーム" %>
        <%= f.text_field :handle, class: 'form-control name', placeholder: 'handle' %>
      </div>
      <div class="form-group">
        <%= f.label :image, "画像" %>
        <%= f.attachment_field :image, class: 'form-control-file user_image' %>
      </div>
      <div class="form-group">
        <%= f.label :profile, "プロフィール" %>
        <%= f.text_area :profile, class: 'form-control introduction' %>
      </div>
      <div class="form-group">
        <%= f.submit "更新", class: "btn btn-secondary" %><span>　</span><%= link_to "戻る", user_path, class: "btn btn-outline-dark py-2 mx-auto" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


