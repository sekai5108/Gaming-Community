<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user/users/user', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>募集詳細</h2>
      <table class="table">
        <tbody>
          <td>
            <%= link_to user_path(@user) do %>
              <i><%= attachment_image_tag @user, :image, fallback: "no_image.jpg", size: "40x40" %></i>
              <%= @user.name %>
              <% end %>
          </td>
          <td>
            <%= @community.title %>
          </td>
          <td>
            <%= @community.text %>
          </td>
          <% if @community.user_id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_community_path(@community), class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", community_path(@community), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-danger" %>
            </td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
