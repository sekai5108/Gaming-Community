<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user/users/user', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>募集掲示板</h2>
      <table class="table table-fover table-inverse">
        <thead>
          <tr>
            <td></td>
            <th>タイトル</th>
            <th>詳細</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @communities.each do |community| %>
        <tr>
          <td>
            <%= link_to user_path(community.user) do %>
              <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
            <% end %>
          </td>
          <td>
            <%= link_to community.title, community_path(community.id) %>
          </td>
          <td>
            <%= community.text %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
