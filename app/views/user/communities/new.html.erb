<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>新規投稿</h2>
      <%= form_with model: @communities, url:communities_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title,  "タイトル" %>
        <%= f.text_field :title, class: 'form-control name', placeholder: 'タイトル' %>
      </div>
      <div class="form-group">
        <%= f.label :text, "本文" %>
        <%= f.text_area :text, class: 'form-control introduction' %>
      </div>
      <div class="form-group text-center">
        <%= link_to "戻る", communities_path, class: "btn btn-outline-secondary mx-auto" %><span>　</span><%= f.submit "投稿", class: "btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


