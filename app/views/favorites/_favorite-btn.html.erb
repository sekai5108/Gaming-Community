<% if community.favorited_by?(current_user) %>
  <%= link_to community.favorites.count, community_favorites_path(community), method: :delete, remote: true, class: "btn btn-outline-info btn-sm" %>
<% else %>
  <%= link_to community.favorites.count, community_favorites_path(community), method: :post, remote: true, class: "btn btn-outline-info btn-sm" %>
<% end %>